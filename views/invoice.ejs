<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <link rel="stylesheet" type="text/css" href="css/normalize.css">
    <link rel="stylesheet" type="text/css" href="css/header.css">
    <link rel="stylesheet" type="text/css" href="css/invoice.css">
    <link rel="stylesheet" type="text/css" href="css/footer.css">
</head>
<body>
   <!--header of the body-->
   <header>
    <!--image is added which is the logo-->
    <img src="images/8.png" alt="Coffee logo">
    <!--headings added with different size-->
    <h1>Its Coffee Time</h1>
    <h3>More Expresso , Less Depresso</h3>
    <%- include('layouts/nav'); -%>
</header>
<!--main part of the body-->
    <main>
        <section>
            <%if(totalCost < 10)
          {%>
            <div class="continue"><h2>make a purchase atleast worth $10 to continue</h2>
              <a href="/product">Click to go back to purchase</a></div>
          <%}
          else
          {%>
            <!--Customer details display-->
            <h1>Thank You For Your Purchase</h1>
            <div class="customer">
                <div class="customerData">
                    <table>
                        <tr><th>Customer Name: </th>
                            <td><%= custName %></td>
                        </tr>
                        <tr><th>Address: </th>
                            <td><%= custAddress %></td>
                        </tr>
                        <tr><th>City:</th>
                            <td><%= custCity %></td>
                        </tr>
                        <tr><th>Province:</th>
                           <td><%= custProvince %></td>
                        </tr>
                        <tr><th>Phone:</th>
                            <td><%= custPhone %></td>
                        </tr>
                        <tr><th>Email:</th>
                           <td><%= custEmail %></td>
                        </tr>
                        <tr><th>Card Number:</th>
                            <td><%= custCardNo %></td>
                        </tr>
                      </table>
                </div>
            </div>
            <!--invoice generated display-->
            <div class="invoiceData">
                <% if(prodList.length > 0)
                {%>
                    <table>
                        <th class="invHead">Item</th>
                        <th class="invHead">Price</th>
                        <th class="invHead">Quantity</th>
                        <th class="invHead">Total</th>
                        <% for(var row=0; row < prodList.length; row++)
                        { %>
                            <tr>
                                <% for(var col=0; col < 4; col++)
                                { %>
                                    <td class="invCol"><%= prodList[row][col] %></td>
                                    <%
                                }
                                %>
                            </tr>
                            <%
                        }
                        %><tr><td class="right" colspan="3">Total</td><td class="invCol">$<%= totalCost.toFixed(2) %></td></tr>
                        <tr><td class="right" colspan="3">Tax</td><td class="invCol">$<%= totalTax.toFixed(2) %></td></tr>
                        <tr><td class="right" colspan="3">Sub Total</td><td class="invCol">$<%= subTotal.toFixed(2) %></td></tr>
                    </table>
                    <%
                }
            }
               %>
                </div>
            </div>
        </section>
    </main>
    <%- include('layouts/footer'); -%>